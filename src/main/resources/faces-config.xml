<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">
 
	<application>
		<el-resolver>
    		    org.springframework.web.jsf.el.SpringBeanFacesELResolver
		</el-resolver>
  	</application>
 
 	<managed-bean>
		<managed-bean-name>soapConnectionService</managed-bean-name>
		<managed-bean-class>com.sforce.soap.services.SOAPConnectionService</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
		<managed-property>
			<property-name>soapConnectionService</property-name>
			<value>#{soapConnectionService}</value>
		</managed-property>
	</managed-bean>
	
</faces-config>